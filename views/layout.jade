doctype html
html
  head
    title= title
    link(rel="stylesheet", href="#{PUBLIC_PATH}/stylesheets/codemirror/5.65.5/codemirror.min.css")
    link(rel="stylesheet" href="#{PUBLIC_PATH}/stylesheets/codemirror/5.65.5/lint.min.css")
    style.
      .code-editor-wrap {
        display:flex;
        flex:1;
        flex-direction:column;
        overflow:auto;
      }
      .code-editor-textarea {
        flex: 1;
        visibility: hidden;
        border:none;
      }
      .code-editor-submit {
        position: fixed;
        right: 12px;
        top: 12px;
        background-color: #1677ff;
        z-index: 9999;
        border: none;
        color: #fff;
        border-radius: 4px;
        font-size: 12px;
        padding: 4px 12px;
        cursor: pointer;
      }
      .code-editor-submit-disabled {
        cursor: not-allowed;
        color: rgba(0, 0, 0, 0.25);
        background-color: rgba(0, 0, 0, 0.04);
      }
      .code-editor-wrap .CodeMirror{
        flex: 1;
        height: auto;
      }
  body
    block content
